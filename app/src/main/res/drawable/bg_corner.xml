<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item >
                <shape android:shape="rectangle">
                    <solid android:color="@color/divider_color"/>
                    <corners android:radius="20dp"/>
                    <stroke android:width="1dp" android:color="@color/white"/>
                </shape>
            </item>

            <item android:bottom="3dp" android:right="4dp"

                >
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <corners android:radius="20dp"/>
                    <stroke android:width="1dp" android:color="@color/red_200"/>
                </shape>
            </item>

        </layer-list>

    </item>

    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/second_text_color"/>

                </shape>
            </item>

            <item android:bottom="2dp" android:right="2dp"
                android:top="2dp" android:left="2dp"
                >
                <shape android:shape="rectangle">
                    <solid android:color="@color/bg_gray"/>
                </shape>
            </item>

        </layer-list>


    </item>

</selector>