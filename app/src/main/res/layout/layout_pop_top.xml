<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#00000000"
    android:id="@+id/pop_frame"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_bule"
        >




    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/iv_back"
        android:src="@mipmap/ic_back"
        android:scaleType="centerInside"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/iv_more"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_more_dian"
        android:layout_alignParentRight="true"
       android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_see_comment"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="@string/see_comment_benduan"
        android:drawableRight="@mipmap/ic_eye"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:layout_toLeftOf="@id/iv_more"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:padding="4dp"
        android:background="@drawable/bg_see_comment_benduan"
        />


    </RelativeLayout>

    <include layout="@layout/layout_pop_bottom"/>

</FrameLayout>