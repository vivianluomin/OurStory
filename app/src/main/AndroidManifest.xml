<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asus1.ourstory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Activities.MainActivity">

        </activity>
        <activity android:name=".Activities.BaseActivity" />
        <activity android:name=".Activities.BookDetailActivity" />
        <activity android:name=".Activities.ReadActivity" />
        <activity
            android:name=".Activities.WriteActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden">
            >
        </activity>
        <activity android:name=".Activities.PublishStroyActivity" />
        <activity android:name=".Activities.BookBriefActivity" />
        <activity android:name=".Activities.BookStartActivity" />
        <activity android:name=".Activities.BookTypeActivity" />
        <activity android:name=".Activities.BookWriteTypeActivity" />
        <activity android:name=".Activities.BookWriterActivity" />
        <activity android:name=".Activities.BookPulickActivity" />
        <activity android:name=".Activities.ContinueWriteActivity" />
        <activity android:name=".Activities.SearchActivity" />
        <activity
            android:name=".Activities.ChatContentActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activities.SplashActivity"
            android:theme="@style/SplashTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Activities.LoadActivity"></activity>
    </application>

</manifest>